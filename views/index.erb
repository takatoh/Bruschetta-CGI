<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= @title %></title>
  </head>
  <body>
    <h1><a href="index.cgi"><%= @title %></a></h1>
    <div>
      <input type="text" id="search-string"><input type="submit" value="Search" id="search-button">
    </div>
    <div>
      <ul>
        <% @books.each do |book| %>
        <li><a href="index.cgi?id=<%= book["id"] %>"><%= title_with_vol(book) %></a> (<%= book["author"] %>)</li>
        <% end %>
      </ul>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const searchButton = document.getElementById("search-button");
        searchButton.addEventListener("click", () => {
          const searchString = document.getElementById("search-string").value;
          window.location.href = "index.cgi?title=" + searchString;
        });
      });
    </script>
  </body>
</html>
